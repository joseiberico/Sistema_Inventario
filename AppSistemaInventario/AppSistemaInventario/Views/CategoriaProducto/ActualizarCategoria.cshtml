@model AppSistemaInventario.Models.CategoriaProducto

<div class="container">
    <h2>Actualizar Categoria</h2>
    <form id="form" method="post" action="@Url.Action("ConfirmarActualizarCategoria")">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Tipo">Tipo:</label>
            <input asp-for="Tipo" class="form-control" placeholder="Ingresa el Tipo" />
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-warning">Actualizar Categoria</button>
        <a class="btn btn-secondary" asp-controller="CategoriaProducto" asp-action="Categoria">Regresar</a>
    </form>
</div>