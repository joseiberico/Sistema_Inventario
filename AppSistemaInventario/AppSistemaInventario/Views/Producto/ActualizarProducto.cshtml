@model AppSistemaInventario.Models.Producto

<div class="container">
    <h2>Actualizar Categoria</h2>
    <form id="form" method="post" action="@Url.Action("ConfirmarActualizarProducto")">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nombre">Nombre:</label>
            <input asp-for="Nombre" class="form-control" placeholder="Ingresa el Nombre" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descripcion">Descripcion:</label>
            <input asp-for="Descripcion" class="form-control" placeholder="Ingresa la Descripcion" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Precio">Precio:</label>
            <input asp-for="Precio" class="form-control" placeholder="Ingresa el Precio" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Stock">Stock:</label>
            <input asp-for="Stock" class="form-control" placeholder="Ingresa el Stock" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Marca">Marca:</label>
            <input asp-for="Marca" class="form-control" placeholder="Ingresa la Marca" />
            <span asp-validation-for="Marca" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Tipo">Categoría:</label>
            <select class="form-control" id="Id" name="Id">
                <option value="">Selecciona una categoría</option>
                @foreach (var categoria in ViewBag.Categorias)
                {
                    <option value="@categoria.Id">@categoria.Tipo</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-warning">Actualizar Categoria</button>
        <a class="btn btn-secondary" asp-controller="Producto" asp-action="ListarProducto">Regresar</a>
    </form>
</div>
