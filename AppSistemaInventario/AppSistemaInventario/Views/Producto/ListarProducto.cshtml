@model List<Producto>

@{
    ViewData["Title"] = "Productos";
}

<div class="container">
    <h2>Productos</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Marca</th>
                <th>Categoria</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Id</td>
                    <td>@producto.Nombre</td>
                    <td>@producto.Descripcion</td>
                    <td>@producto.Precio</td>
                    <td>@producto.Stock</td>
                    <td>@producto.Marca</td>
                    <td>@producto.IdcategoriaNavigation?.Tipo</td>  
                    <td>
                        <a class="btn btn-warning" asp-area="" asp-controller="Producto" asp-action="ActualizarProducto" asp-route-id="@producto.Id"><i class="bi bi-pencil-fill"></i> Actualizar</a>
                        <a class="btn btn-danger" asp-area="" asp-controller="Producto" asp-action="EliminarProducto" asp-route-id="@producto.Id"><i class="bi bi-eraser-fill"></i>Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>